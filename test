private _currentCount: number | undefined;

@Input()
public set currentCount(value: number | undefined) {
  this._currentCount = value;
  this.cdr.markForCheck(); // force le rafraîchissement même si le composant est déjà affiché
}

public get currentCount(): number | undefined {
  return this._currentCount;
}

constructor(
  private readonly router: Router,
  private readonly jwtService: JwtService,
  private readonly metabotBridge: MetabotBridgeService,
  private readonly cdr: ChangeDetectorRef
) {}

