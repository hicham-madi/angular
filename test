export const IconColorMap = new Map<IconKey, string>([
  [IconKey.REQUEST, '#B0D53A'],             // $vert-3-color
  [IconKey.CLAIM, '#7BC043'],              // $vert-1-color
  [IconKey.APPROVAL, '#A2C4FF'],           // $bleu-1-color
  [IconKey.DISCUSSION, '#5B9BD5'],         // $bleu-2-color
  [IconKey.REQUEST_EXPERT_SERVICE, '#6DC799'] // $vert-2-color
]);

<mat-icon
  class="icon"
  fontSet="material-icons-outlined"
  [ngStyle]="{ color: getIconColor(row) }">
  {{ getIcon(row) }}
</mat-icon>

protected getIconColor(ticket: Ticket): string {
  const icon = this.getIcon(ticket);
  return IconColorMap.get(icon) ?? '#888888'; // fallback par d√©faut
}
