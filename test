.table-scroll-wrapper {
  display: flex;
  flex-direction: column;
  height: 100%; // ou 100vh si dans la page complète
  min-height: 0; // nécessaire pour scroll dynamique

  table {
    table-layout: fixed;
    width: 100%;
  }
}

.table-viewport {
  flex: 1 1 auto;
  overflow: auto;
}

<div class="table-scroll-wrapper uk-flex uk-flex-column">
  <!-- Table HEADER fixe -->
  <table mat-table [dataSource]="[]" matSort class="mat-elevation-z8">
    <ng-container *ngFor="let column of displayedColumns" [matColumnDef]="column">
      <th mat-header-cell *matHeaderCellDef [ngStyle]="columnConfig[column]?.style || {}">
        {{ columnConfig[column]?.label || column }}
      </th>
    </ng-container>
    <tr mat-header-row *matHeaderRowDef="displayedColumns"></tr>
  </table>

  <!-- Table BODY scrollable -->
  <cdk-virtual-scroll-viewport
    itemSize="50"
    class="table-viewport uk-flex-1"
    (scrolledIndexChange)="onCdkScroll()"
  >
    <table mat-table [dataSource]="tickets" class="mat-elevation-z8">
      <ng-container *ngFor="let column of displayedColumns" [matColumnDef]="column">
        <td mat-cell *matCellDef="let row" [ngStyle]="columnConfig[column]?.style || {}">
          {{ row[column] }}
        </td>
      </ng-container>
      <tr mat-row *matRowDef="let row; columns: displayedColumns"></tr>
    </table>
  </cdk-virtual-scroll-viewport>
</div>
