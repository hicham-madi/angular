onScrollTriggered(): void {
  if (this.scrollCompleted || this.isLoading) return;

  this.isLoading = true;
  this.currentPage++;

  this.mbotService.getTicketsPaginated(this.listService.getParam(), this.currentPage, this.pageSize).subscribe({
    next: (response) => {
      const content = response.tickets.content;

      if (content.length < this.pageSize) {
        this.scrollCompleted = true;
      }

      this.tickets.push(...content);

      this.isLoading = false;
    },
    error: () => {
      this.isLoading = false;
    }
  });
}
