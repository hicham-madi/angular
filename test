feat(front): ajout du tri initial sur 'lastActivityTimestamp' desc lors du chargement de la liste des tickets

protected sortData(column: string): void {
  if (this.sort.active !== column) {
    this.sort.active = column;
    this.currentSortDirection = 'asc';
  } else {
    switch (this.currentSortDirection) {
      case 'asc':
        this.currentSortDirection = 'desc';
        break;
      case 'desc':
        this.currentSortDirection = null;
        // ✅ On retourne au tri par défaut
        this.sort.active = 'lastActivityTimestamp';
        this.fetchTickets('lastActivityTimestamp', 'desc');
        return;
      default:
        this.currentSortDirection = 'asc';
    }
  }

  this.sort.direction = this.currentSortDirection ?? '';
  this.fetchTickets(this.currentSortDirection ? column : null, this.currentSortDirection);
}
