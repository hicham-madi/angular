public onClick(badge?: DashboardCardBadge, event?: MouseEvent): void {
  if (badge) {
    event?.stopPropagation();

    if (badge.clickable && badge.onClick && badge.count > 0) {
      this.card.active = false;
      badge.onClick();
      this.cardClicked.emit(badge.type);
    }
  } else if (this.card.clickable && this.card.onClick && this.card.count > 0) {
    this.card.onClick();
    this.cardClicked.emit(this.card.type);
  }
}
