private getBaseListCommands(): string[] {
  switch (this.currentContext) {
    case TicketContext.SOLICITATIONS:
      // liste perso
      return ['ticket-list'];

    case TicketContext.TEAM:
      // liste équipe en cours
      return ['ticket-list', 'team-list'];

    case TicketContext.TERMINATED:
      // liste perso terminées
      return ['ticket-list'];

    case TicketContext.TERMINATED_TEAM:
      // liste équipe terminées
      return ['ticket-list', 'team-list'];

    default:
      return ['ticket-list'];
  }
}

protected onTabChange(tabValue: string): void {
  const isOngoing = tabValue === 'ongoing';
  const base = this.getBaseListCommands();

  const commands = isOngoing
    ? ['/', ...base]
    : ['/', ...base, 'terminated-list'];

  this.router.navigate(commands, { queryParamsHandling: 'merge' });
}
