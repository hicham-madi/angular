// ---- avant : plusieurs if/else ----
// ---- après : switch exhaustif + mutualisation ----
const cfg = (() => {
  switch (context) {
    case TicketContext.SOLICITATIONS:
    case TicketContext.TERMINATED:
      return this.tableConfigFactory.getBaseColumns();

    case TicketContext.TEAM:
    case TicketContext.TERMINATED_TEAM:
      return this.tableConfigFactory.getColumnsForTeamPage();

    case TicketContext.REGIONAL_FUND:
      return this.tableConfigFactory.getColumnsForRegionalFundPage();

    default:
      // fallback sûr
      return this.tableConfigFactory.getBaseColumns();
  }
})();
