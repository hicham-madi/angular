public onClick(badge?: DashboardCardBadge, event?: MouseEvent): void {
  if (!badge) return;

  event?.stopPropagation();

  if (badge.clickable && badge.onClick && badge.count > 0) {
    badge.active = !badge.active;
    this.card.active = false;
    badge.onClick();
    this.cardClicked.emit();
  }
}
