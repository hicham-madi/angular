protected getDomainTooltip(row: { domain?: { label?: unknown }, subDomain?: { label?: unknown } } | null | undefined): string {
  if (!row) return '';

  const normalize = (v: unknown) =>
    (typeof v === 'string' ? v.trim() : v == null ? '' : String(v).trim());

  const values = [
    normalize(row.domain?.label),
    normalize(row.subDomain?.label),
  ].filter(Boolean); // enlève les vides

  // évite les doublons éventuels
  const unique = Array.from(new Set(values));

  return unique.join('\n');
}
