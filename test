public hasActiveFilters(): boolean {
  return !!(
    this.searchTerm.trim() ||
    this.selectedStatus ||
    this.selectedAgency ||
    this.selectedCollaborator ||
    this.selectedCampaign
  );
}

public resetFilters(): void {
  this.searchTerm = '';
  this.selectedStatus = '';
  this.selectedAgency = '';
  this.selectedCollaborator = '';
  this.selectedCampaign = '';

  // réémettre les changements
  this.searchChanged.emit(this.searchTerm);
  this.statusChanged.emit(this.selectedStatus);
  this.agencyChanged.emit(this.selectedAgency);
  this.collaboratorChanged.emit(this.selectedCollaborator);
  this.campaignChanged.emit(this.selectedCampaign);
}

<div class="uk-width-expand padding-small" *ngIf="hasActiveFilters()">
  <button class="canard-fonce-button" (click)="resetFilters()">
    Réinitialiser les filtres
  </button>
</div>8
