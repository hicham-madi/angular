.card {
  position: relative;
  width: 100%;
  padding: 8px;
  border-radius: 5px;
  font-family: 'Montserrat', serif;
  display: flex;
  flex-direction: column;
  gap: 6px;
  transition: background-color 0.2s ease;
}
// === Mixin pour la couleur avec hover + active ===
@mixin card-color($color) {
  background-color: $color;

  &.clickable:hover,
  &.active {
    background-color: darken($color, 5%);
  }
}

// === Styles généraux de la carte ===
.card {
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 8px;
  border-radius: 5px;
  font-family: 'Montserrat', serif;
  background: white;
  align-content: center;
  flex: 0 0 auto;
  transition: transform 0.15s ease, box-shadow 0.2s ease;

  gap: 6px;

  &.clickable {
    cursor: pointer;

    &:hover {
      // Le fond sera géré dynamiquement via le mixin
      transform: scale(1.02);
      box-shadow: none;
    }
  }

  &.active {
    // Couleur de fond gérée par le mixin
    box-shadow: none;
  }

  &.read {
    opacity: 0.8;
  }
}

// === Cartes spécifiques avec couleurs uniques ===
.coastal-breeze {
  @include card-color(#e2f7f7);
  width: 315px;

  display: flex;
  flex-direction: column;
