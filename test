this.route.queryParams.subscribe((params) => {
  const card = params['card'] as FilterCardType;
  const selectedCard = card && Object.values(FilterCardType).includes(card) ? card : FilterCardType.NONE;
  this.loadTickets(selectedCard, this.onCardClicked, TicketContext.SOLICITATIONS);
});

if (this.router) {
  this.router.navigate([], {
    relativeTo: this.route,
    queryParams: { card: type },
    queryParamsHandling: 'merge',
  });
}
