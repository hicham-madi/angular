import java.util.Map;

public class TicketIconLabelMapper {

    private static final Map<String, String> ICON_LABEL_MAP = Map.of(
        "REQUEST", "Demande",
        "CLAIM", "RÃ©clamation",
        "APPROVAL", "Approbation",
        "DISCUSSION", "Groupe de discussion",
        "REQUEST_EXPERT_SERVICE", "Demande service expert"
    );

    public static String getIconLabel(String iconKey) {
        return ICON_LABEL_MAP.getOrDefault(iconKey, "");
    }
}

case CLAIM_TYPE_LABEL -> Comparator.comparing(
    ticket -> {
        String iconKey = ticket.getClaimType() != null ? ticket.getClaimType().getCode() : null;
        return iconKey != null ? TicketIconLabelMapper.getIconLabel(iconKey) : "";
    },
    Comparator.nullsLast(String::compareToIgnoreCase)
);
