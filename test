if (context !== TicketContext.REGIONAL_FUND) {
  const paramsForCounters = { ...params, cardType: FilterCardType.NONE };
  const paramsForSelected = { ...params, cardType };

  return forkJoin({
    env: this.mbotService.getEnvConfig(),
    counters: this.mbotService.getTicketListV2(paramsForCounters),   // <- pour alimenter toutes les cartes
    tickets: cardType !== FilterCardType.NONE
      ? this.mbotService.getTicketListV2(paramsForSelected)          // <- liste de la carte cliquÃ©e
      : of(createEmptyMbotList()),
  }).pipe(
    map(({ env, counters, tickets }) => ({
      context,
      initialTab,
      config: { displayedColumns, columnConfig },
      tickets,
      stats: counters?.stats,  // <- compteurs des autres cartes
      env,
      cardType,                // <- requis par le type TicketListPrefetch
    }))
  );
}
