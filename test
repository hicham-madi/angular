public onTabChange(tabValue: string): void {
  const currentUrl = this.router.url;

  const targetUrl =
    tabValue === 'completed'
      ? '/ticket-list/terminated-list'
      : `/ticket-list?status=${tabValue}`;

  if (currentUrl === targetUrl) {
    // Si on clique sur l'onglet déjà actif, on force la navigation
    this.router
      .navigateByUrl('/', { skipLocationChange: true })
      .then(() => this.router.navigateByUrl(targetUrl));
  } else {
    this.router.navigateByUrl(targetUrl);
  }
}
