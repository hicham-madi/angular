// Style actif pour un filtre sélectionné ≠ valeur par défaut
%active-filter {
  @extend .font-weight-large;
  background: $vert-prairie-clair-clair;
}

// Dans la liste (l'option sélectionnée)
select option:checked:not([value=""]) {
  @extend %active-filter;
}

// Le champ <select> visible (support navigateurs modernes avec :has)
select:has(option:checked:not([value=""])) {
  @extend %active-filter;
}
