// Mettez ici VOS codes techniques de statut, dans l'ordre métier voulu.
private static final List<String> STATUS_ORDER = List.of(
    "NEW",
    "IN_PROGRESS",
    "WAITING_CUSTOMER",
    "WAITING_SUPPORT",
    "RESOLVED",
    "CLOSED"
);

// Lookup O(1)
private static final Map<String, Integer> STATUS_RANK = new HashMap<>();
static {
    for (int i = 0; i < STATUS_ORDER.size(); i++) {
        STATUS_RANK.put(STATUS_ORDER.get(i), i + 1); // 1..N
    }
}

private static int rankOfStatus(String status) {
    return STATUS_RANK.getOrDefault(status, Integer.MAX_VALUE); // inconnus/null à la fin
}

case "STATUS_RANK", "statusRank" ->
    Comparator.comparingInt(t -> rankOfStatus(t.getStatus()));
