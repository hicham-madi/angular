switch (cardType) {
    case "claims":
        predicate = TicketCriteria.claims(filters.getCustomer().getId());
        break;
    case "claimsReadCustomer":
        predicate = TicketCriteria.claimsReadCustomer(filters.getCustomer().getId());
        break;
    // autres casâ€¦
}
public static PredicateObject<Object, Ticket> claims(String customerId) {
    return Predicates.and(
        Predicates.in("claimType.code", "RC"),
        Predicates.in("status", "NEW", "PROCESSING", "PENDING", "APPROVAL_PENDING", "APPROVAL_REFUSED"),
        Predicates.equal("customer_id", customerId)
    );
}

public static PredicateObject<Object, Ticket> claimsReadCustomer(String customerId) {
    return Predicates.and(
        Predicates.in("claimType.code", "RC"),
        Predicates.in("status", "NEW", "PROCESSING", "PENDING", "APPROVAL_PENDING", "APPROVAL_REFUSED"),
        Predicates.equal("customer_id", customerId),
        Predicates.equal("readCustomer", false)
    );
}
