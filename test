<div class="badge"
     [class.clickable]="badge.clickable && badge.count > 0"
     [class.active]="isBadgeActive(badge.type)"
     [class.dimmed]="isBadgeDimmed(badge.type)"
     [class.disabled]="badge.count === 0"
     [ngClass]="{
       'card-colored': isBadgeActive(badge.type) || isActive(),
       [card.variant]: isBadgeActive(badge.type) || isActive()
     }"
     (click)="onClick(badge, $event)">
.badge {
  // styles par d√©faut
  background-color: $html-background;

  &.card-colored.yellow        { @include card-color(#f6f3f7); }
  &.card-colored.cloud-break   { @include card-color(#f6f3f7); }
  &.card-colored.sea-salt-sherbet { @include card-color(#fff7f7); }
  &.card-colored.calcareous-sinter { @include card-color(#dfeeff); }
  &.card-colored.coastal-breeze    { @include card-color(#e2f7f7); }
}
