if (card !== FilterCardType.NONE && this.cardClickedOnce) {
  params.cardType = card;

  this.mbotService.getTicketsByCard(params).subscribe({
    next: (response) => {
      this.handleTicketResponse(response, context);
      this.cdr.detectChanges(); // optionnel ici
    },
    error: (err) => {
      console.error('Erreur lors du chargement des tickets par carte :', err);
    },
    complete: () => {
      this.isLoading = false;
    },
  });
  return;
}
