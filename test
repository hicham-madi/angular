
protected getDomainTooltip(row: any): string {
  if (!row) return '';
  const toStr = (v: unknown) => (v ?? '').toString().trim();
  const parts = [toStr(row?.domain?.label), toStr(row?.subDomain?.label)]
    .filter(Boolean);
  return parts.join('\n');
}

<div class="object-soliciting"
     [tooltip]="getDomainTooltip(row)"
     tooltipClass="tooltip-multiline"
     [tooltipHtml]="false"
     placement="left"
     triggers="hover"
     show-delay="150"
     hide-delay="100">
  {{ row?.object?.label }}
</div>

.tooltip-multiline {
  white-space: pre-line;
  text-align: left;
  max-width: 360px;
}
