.tab {
  border-bottom: 2px solid $text-border;
  transition: all .2s ease;
}

// Style appliqué à l’onglet actif
.active-tab {
  color: $canard-moyen;
  border-bottom: 2px solid $canard-moyen;
  background-color: $vert-prairie;
}

// Hover uniquement pour Mon équipe
.team-tab:hover {
  color: $canard-moyen;
  border-bottom: 2px solid $canard-moyen;
  background-color: $vert-prairie;
}

// Cas spécial : si Mon équipe est actif → activer hover sur Mes sollicitations
.team-tab.active-tab ~ .solicitations-tab:hover {
  color: $canard-moyen;
  border-bottom: 2px solid $canard-moyen;
  background-color: $vert-prairie;
}
<button 
  class="text-button tab border-none no-radius padding-small" 
  [ngClass]="{ 
    'active-tab': tab === activeTab, 
    'team-tab': tab === 'Mon équipe',
    'solicitations-tab': tab === 'Mes sollicitations'
  }"
  (click)="handleTabClick(tab)">
