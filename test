activeCardType?: FilterCardType;
activeBadgeType?: FilterCardType;

onCardClicked(type: FilterCardType) {
  this.activeCardType = type;
  this.activeBadgeType = undefined; // reset badge when card clicked
  // autres traitements si besoin
}

onBadgeClicked(type: FilterCardType) {
  this.activeBadgeType = type;
  this.activeCardType = undefined; // reset card when badge clicked
  // autres traitements si besoin
}
<metabot-dashboard-card
  [card]="card"
  [activeType]="activeCardType"
  (cardClicked)="onCardClicked(card.type)"
></metabot-dashboard-card>

...

<metabot-dashboard-card
  [card]="card"
  [activeType]="activeBadgeType"
  (cardClicked)="onCardClicked(card.type)"
  (badgeClicked)="onBadgeClicked($event)"
></metabot-dashboard-card>
<!-- Appliquer la classe 'active' uniquement si activeType === card.type -->
<div class="card"
  [class.active]="activeType === card.type"
  (click)="onClick()"
>
<div
  class="badge"
  [class.active]="badge.active && badge.count > 0"
  ...
>
