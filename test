import { Component, Input, Output, EventEmitter } from '@angular/core';
import { ActivatedRoute } from '@angular/router';
import { DashboardCardData } from '../../models/dashboard-card-data';

@Component({
  selector: 'app-dashboard-card',
  templateUrl: './dashboard-card.component.html',
})
export class DashboardCardComponent {
  @Input() card!: DashboardCardData;
  @Input() activeType?: string;
  @Output() cardclicked = new EventEmitter<string>();

  private urlCardType: string | null = null;

  constructor(private route: ActivatedRoute) {
    this.route.queryParamMap.subscribe((params) => {
      this.urlCardType = params.get('card');
    });
  }

  public isActive(): boolean {
    // Soit activeType (logique actuelle), soit via lâ€™URL
    return (
      this.activeType === this.card?.type ||
      this.urlCardType === this.card?.type
    );
  }

  public isDimmed(): boolean {
    return (
      this.cardclickedOnce && this.activeType !== 'NONE'
    );
  }
}
