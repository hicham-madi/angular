import { FormGroup, FormControl } from '@angular/forms';

export class TicketListPageComponent {
  dateRange = new FormGroup({
    start: new FormControl<Date | null>(null),
    end:   new FormControl<Date | null>(null),
  });

  ngOnInit(): void {
    const end = new Date();
    const start = new Date();
    start.setDate(end.getDate() - 90);
    this.dateRange.setValue({ start, end });   // valeur par d√©faut 90 jours
  }

  onRangeChange(): void {
    const v = this.dateRange.value;
    // applique tes filtres / recharge la liste ici
    this.applyFiltersWithRange(v.start!, v.end!);
  }
}

<div class="uk-flex uk-flex-middle uk-margin-small-top">
  <div class="input-wrapper input padding-large-right">
    <mat-date-range-input [formGroup]="dateRange" [rangePicker]="picker">
      <input matStartDate formControlName="start" placeholder="JJ/MM/AAAA" [readOnly]="true">
      <input matEndDate   formControlName="end"   placeholder="JJ/MM/AAAA" [readOnly]="true">
    </mat-date-range-input>

    <span class="icon-s18 material-symbols-outlined pointer mat-icon-right"
          (click)="dateRange.markAsTouched(); picker.open()">event</span>

    <mat-date-range-picker #picker (dateChange)="onRangeChange()"></mat-date-range-picker>
  </div>
</div>
