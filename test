.filter-bar {
  .status {
    // Style par défaut : même rendu que les autres listes
    select {
      outline: none;
      background: white;
      color: $text;
      transition: background-color .2s ease, color .2s ease;
    }

    // Quand une valeur ≠ "" est sélectionnée → colorer UNIQUEMENT le bouton
    select:has(option:checked:not([value=""])) {
      background: $vert-prairie;
      color: white;           // lisibilité (facultatif)
      font-weight: 600;       // équiv. à .font-weight-large
    }

    // Quand la valeur = "" → garder le fond blanc
    select:has(option:checked[value=""]) {
      background: white;
      color: $text;
      font-weight: normal;
    }
  }

  // Important : ne pas styler les <option> (on laisse le rendu natif)
  // select option { background: initial; } // à éviter, certains navigateurs l’ignorent
}

<select
  [ngModel]="statusValue"
  (ngModelChange)="statusValue = $event"
  [ngClass]="{ 'has-value': statusValue !== '' }">
  …
</select>

.filter-bar .status select { background: white; color: $text; }
.filter-bar .status select.has-value { background: $vert-prairie; color: white; font-weight: 600; }
