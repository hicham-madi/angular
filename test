/* le conteneur existe déjà, on le garde */
.attach-file-ctn {
  position: relative;     /* point d’ancrage pour la popin */
  /* width: 35px;  => tu peux le laisser si tu veux l’icône seule */
}

/* === Fix du débordement === */
.attach-file-ctn .attachment-popin {
  position: absolute;     /* sort du flux => ne crée plus de scrollbar */
  right: 0;               /* colle le bord droit de la popin au bouton */
  bottom: 40px;           /* au-dessus du bouton (ajuste si besoin)    */
  max-width: 360px;
  width: max-content;     /* s’adapte au contenu */
  z-index: 1000;
  box-sizing: border-box;
}

/* Si l’animation UIkit la translate vers la droite, on neutralise localement */
.attach-file-ctn .uk-animation-slide-right-medium {
  transform: none;
}

/* Ceinture et bretelles : empêcher un éventuel débordement horizontal du conteneur parent */
.attach-file-ctn,
.attach-file-ctn .attachment-popin {
  overflow-x: hidden;
}
