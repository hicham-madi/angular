String cardType = Optional.ofNullable(mbotRequestData.getCardType()).orElse("NONE");

PredicateObject<Object, Ticket> predicate;

switch (cardType) {
    case "requests":
        predicate = TicketCriteria.requests(filters.getCustomer().getId());
        break;
    case "requestsReadCustomer":
        predicate = TicketCriteria.requestsReadCustomer(filters.getCustomer().getId());
        break;
    // ajoute les autres types ici
    default:
        predicate = ticket -> true; // fallback
        break;
}
List<Ticket> tickets = hazelCastRepository.findByPredicate(user.getOrg(), predicate);
