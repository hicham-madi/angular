<div class="badge"
     [tooltip]="badge.tooltip"
     [triggers]="'manual'"
     show-delay="200"
     hide-delay="100"
     placement="top"
     #tip="tooltip"
     (mouseenter)="onTooltipEnter(tip)"
     (mouseleave)="onTooltipLeave(tip)">
  {{ badge.label }}
</div>

import { Component } from '@angular/core';
import { TooltipDirective, TooltipService } from 'ng2-tooltip-directive';

@Component({
  selector: 'app-dashboard-card',
  templateUrl: './dashboard-card.component.html'
})
export class DashboardCardComponent {
  constructor(private tooltipService: TooltipService) {}

  onTooltipEnter(tip: TooltipDirective): void {
    this.tooltipService.hideAll(); // Ferme les autres tooltips
    tip.show();
  }

  onTooltipLeave(tip: TooltipDirective): void {
    tip.hide();
  }
}
