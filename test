protected getSortIcon(column: string): string {
  if (this.sort?.active !== column) {
    return 'unfold_more'; // Pas la colonne triée
  }

  return this.currentSortDirection === 'asc' ? 'arrow_upward' : 'arrow_downward';
}

feat(table): tri par défaut sur 'lastActivityTimestamp' du plus récent au plus ancien avec icône adaptée

public sortActive: string = 'lastActivityTimestamp';
public sortDirection: 'asc' | 'desc' = 'desc';

ngOnInit(): void {
  this.currentSortDirection = this.sortDirection;
  this.fetchTickets(this.sortActive, this.sortDirection);
}

protected sortData(column: string): void {
  if (this.sortActive !== column) {
    this.sortActive = column;
    this.currentSortDirection = 'asc';
  } else {
    switch (this.currentSortDirection) {
      case 'asc':
        this.currentSortDirection = 'desc';
        break;
      case 'desc':
        this.currentSortDirection = null;
        break;
      default:
        this.currentSortDirection = 'asc';
    }
  }

  this.sortDirection = this.currentSortDirection ?? 'asc';
  this.fetchTickets(this.currentSortDirection ? column : null, this.currentSortDirection);
}
