import { ViewChild } from '@angular/core';
import { FilterBarComponent } from '../components/filter-bar/filter-bar.component';

export class TicketsPageComponent extends TicketsPageBase {
  @ViewChild('filterBar') filterBar!: FilterBarComponent;

  protected onCardClicked(type: FilterCardType): void {
    // ... ta logique existante (chargement, etc.)
    this.filterBar?.resetFilters();   // <-- réinitialise les filtres
    // éventuellement relancer la recherche ici si besoin
  }

  protected onHeaderTabClick(): void {
    // quand on change d’onglet
    this.filterBar?.resetFilters();
  }
}
