public ngAfterViewInit(): void {
  setTimeout(() => {
    // Recalcule la taille du viewport pour forcer le rendu du virtual scroll
    this.cdkVirtualScroll?.checkViewportSize();

    // Charge les templates de colonnes une fois la vue stabilisée
    this.columnTemplates = {
      ...this.tableConfigFactory.getBaseTemplates(this),
    };

    // Déclenche une détection de changements manuelle
    this.cdr.detectChanges();
  }, 0);
}
