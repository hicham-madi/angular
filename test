<div
  class="object-soliciting"
  [ngClass]="{ 'font-weight-medium': !readCustomer(row) }"
  [tooltip]="[row?.domain?.label, row?.subDomain?.label].filter(Boolean).join('\n')"
  tooltipClass="tooltip-multiline"
  triggers="hover"
  show-delay="150"
  hide-delay="100">
  {{ row?.object?.label }}
</div>

/* ng2-tooltip-directive applique cette classe au tooltip */
:host ::ng-deep .tooltip-multiline {
  white-space: pre-line; /* interprète \n comme un retour à la ligne */
  line-height: 1.4;
  max-width: 24rem;      /* optionnel : limite la largeur */
  word-break: break-word;/* optionnel : casse les mots longs */
}
