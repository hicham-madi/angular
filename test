public static com.hazelcast.query.Predicate<Object, Ticket> requests(
    String customerId,
    boolean isPrivate,
    boolean isFullSet
) {
    List<String> statuses = isFullSet
        ? List.of(
            StatusTicket.NEW.toString(),
            StatusTicket.PROCESSING.toString(),
            StatusTicket.APPROVAL_PENDING.toString(),
            StatusTicket.APPROVAL_REFUSED.toString(),
            StatusTicket.PENDING.toString()
        )
        : List.of(
            StatusTicket.NEW.toString(),
            StatusTicket.PROCESSING.toString(),
            StatusTicket.PENDING.toString()
        );

    return Predicates.and(
        Predicates.equal(CLAIM_TYPE_CODE_FIELD, ClaimTypeCode.DC.toString()),
        Predicates.in(STATUS_FIELD, statuses.toArray()),
        isPrivate ? Predicates.equal(PRIVATE_FIELD, true) : Predicates.alwaysTrue(),
        (StringUtils.isNotEmpty(customerId)
            ? Predicates.equal(CUSTOMER_ID, customerId)
            : Predicates.alwaysTrue())
    );
}
