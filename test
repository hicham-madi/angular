const hasValidSort =
  this.currentSort?.sortKey != null && this.currentSort?.isAsc !== undefined;

const opts: {
  sortKey?: string;
  isAsc?: boolean;
  searchTerm?: string;
  statusFilter?: string;
  agencyFilter?: string;
  collaboratorFilter?: string;
  campaignFilter?: string;
} = {
  ...(hasValidSort ? {
    sortKey: this.currentSort!.sortKey!,
    isAsc: !!this.currentSort!.isAsc   // garde false
  } : {}),
  searchTerm: this.searchTerm?.trim() ?? '',
  statusFilter: this.selectedStatus ?? '',
  agencyFilter: this.selectedAgency ?? '',
  collaboratorFilter: this.selectedCollaborator ?? '',
  campaignFilter: this.selectedCampaign ?? '',
};

// (facultatif) debug
// console.log('opts envoy√©s:', opts);

this.loadTicketsByCard(nextCard, this.currentContext, 0, opts)...
