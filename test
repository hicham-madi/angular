protected getRemainingDays(): number | null {
  if (!this.timeline) return null;
  const endItem = this.timeline.find((t: any) => t.shortLabel === 'end');
  return endItem?.remainingDays ?? null;
}

<div class="progress-bar-wrapper">
  <mat-progress-bar
    [value]="value"
    [mode]="mode"
    [bufferValue]="bufferValue"
    [color]="backgroundColor">
  </mat-progress-bar>

  <span class="remaining-days" *ngIf="getRemainingDays() !== null">
    {{ getRemainingDays() }}j restant
  </span>
</div>
