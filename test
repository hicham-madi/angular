constructor(private router: Router) {}

ngOnInit(): void {
  const currentUrl = this.router.url;
  const matchedTab = this.tabs.find(tab => currentUrl.includes(tab.value));
  this.selected = matchedTab?.value ?? this.tabs[0]?.value;
}

public onTabClicked(tabValue: string): void {
  const url = this.router.url;
  const isTeamTab = url.includes('team-list');

  const basePath = ['ticket-list'];
  if (isTeamTab) {
    basePath.push('team-list');
  }

  basePath.push(tabValue);
  this.router.navigate(basePath);
}

<metabot-status-tabs
  [tabs]="statusList"
  [currentCount]="currentCount"
  (tabChange)="onTabClicked($event)">
</metabot-status-tabs>
