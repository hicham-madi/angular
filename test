import { FormControl, FormGroup } from '@angular/forms';

dateRangeControl = new FormGroup({
  start: new FormControl<Date | null>(null),
  end:   new FormControl<Date | null>(null),
});

ngOnInit(): void {
  const end = new Date();
  const start = new Date(); start.setDate(end.getDate() - 90);
  this.dateRangeControl.setValue({ start, end }); // init 90 jours
  // VÃ©rif rapide : log les changements
  this.dateRangeControl.valueChanges.subscribe(v => console.log('range maj:', v));
}
