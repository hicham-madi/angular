    }

    &.active {
      color: $canard-fonce;
      border-bottom: 2px solid transparent;
      background-color: $vert-prairie; // actif + hover = mÃªme fond
    }

    &.inactive {
      background-color: $vert-prairie-clair;
    }
  }
}

[class.hovering]="hoveringTabs"
