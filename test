.status-tabs {
  display: flex; // n√©cessaire pour cibler les autres onglets
  .tab {
    border: none;
    background: none;
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
    cursor: pointer;

    &.active,
    &.inactive {
      color: $canard-fonce;
      border-bottom: 2px solid transparent;
    }

    &.active {
      background-color: $vert-prairie;
    }

    &.inactive {
      background-color: $vert-prairie-clair;
    }

    &:hover {
      background-color: $vert-prairie;

      // changer les autres onglets
      ~ .tab:not(.active) {
        background-color: lighten($vert-prairie-clair, 5%);
      }
      @media (hover: hover) {
        &:not(.active) {
          background-color: $vert-prairie; // au cas par cas
        }
      }
    }
  }
}
