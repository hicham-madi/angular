import { Component, Input, OnChanges, SimpleChanges, ChangeDetectorRef } from '@angular/core';

export class PageHeaderComponent implements OnChanges {
  @Input() currentCount?: number;

  protected tabs: Tab[] = Object.values(Tab);
  protected activeTab: Tab = this.tabs[0];

  constructor(private readonly cdr: ChangeDetectorRef) {}

  ngOnChanges(changes: SimpleChanges): void {
    if (changes['currentCount']) {
      // Force Angular à re-render quand currentCount est défini
      this.cdr.detectChanges();
    }
  }

  // Le reste inchangé
}
