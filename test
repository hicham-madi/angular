// Dans input-control.component.ts
protected dateRangeChange(_startEl: HTMLInputElement, _endEl: HTMLInputElement): void {
  if (!this.control) { return; }

  const startCtrl = this.control.get('start');
  const endCtrl   = this.control.get('end');

  // Récupère les valeurs *typed* (Date | null) depuis le form, pas depuis les inputs
  const start: Date | null = startCtrl?.value ?? null;
  const end: Date | null   = endCtrl?.value ?? null;

  // Patch toujours LES DEUX clés ensemble (ne jamais setValue d’une seule clé)
  this.control.patchValue({ start, end }, { emitEvent: true });

  // Feedback de saisie
  this.control.markAsDirty();
}
