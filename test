ngOnInit(): void {
  this.router.events.subscribe((event) => {
    if (event instanceof NavigationEnd) {
      const match = Array.from(this.tabsUrls).find(([_, path]) =>
        event.urlAfterRedirects.includes(path)
      );
      if (match) {
        this.activeTab = match[0];
        this.cdr.markForCheck(); // ou detectChanges()
      }
    }
  });
}
