.filter-bar {
  .status {
    select {
      // style de base du bouton
      background: white;
      color: $text;
    }

    // quand une valeur ≠ "" est sélectionnée → bouton vert
    select:has(option:checked:not([value=""])) {
      @extend .font-weight-large;
      background: $vert-prairie;
      color: white;
    }

    // toutes les options non sélectionnées → fond blanc
    select option {
      background: white;
      color: $text;
    }

    // option sélectionnée → garder le fond système (ou vert si tu veux)
    select option:checked {
      background: $vert-prairie;
      color: white;
    }
  }
}
