public ngAfterViewInit(): void {
  const interval = setInterval(() => {
    // Si au moins une ligne est prÃ©sente dans le DOM
    const hasRows = document.querySelectorAll('table mat-row').length > 0;

    if (hasRows && this.cdkVirtualScroll) {
      this.cdkVirtualScroll.checkViewportSize();
      this.cdr.detectChanges();
      clearInterval(interval); // Stop le polling
    }
  }, 50);
}
