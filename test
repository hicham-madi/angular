<cdk-virtual-scroll-viewport itemSize="48" class="scroll-viewport" (scrolledIndexChange)="onCdkScroll()">
  <table mat-table [dataSource]="tickets" class="mat-elevation-z8 full-width-table">

    <!-- Colonnes dynamiques -->
    <ng-container *ngFor="let column of displayedColumns" [matColumnDef]="column">
      <th mat-header-cell *matHeaderCellDef class="sticky-header">
        {{ columnConfig[column]?.label || column }}
      </th>

      <td mat-cell *matCellDef="let row" [ngStyle]="columnConfig[column]?.style || {}">
        <ng-container *ngIf="columnTemplates[column]">
          <ng-container *ngTemplateOutlet="columnTemplates[column]; context: { $implicit: row }"></ng-container>
        </ng-container>
      </td>
    </ng-container>

    <!-- Header et lignes -->
    <tr mat-header-row *matHeaderRowDef="displayedColumns"></tr>
    <tr mat-row *matRowDef="let row; columns: displayedColumns"
        [class.readCustomer]="isReadCustomer(row)"
        (click)="rowClick?.(row)">
    </tr>
  </table>
</cdk-virtual-scroll-viewport>

.scroll-viewport {
  height: 600px; // ou toute hauteur souhait√©e
  overflow: auto;
}

.full-width-table {
  width: 100%;
  border-collapse: collapse;
}

::ng-deep .mat-header-row {
  position: sticky;
  top: 0;
  z-index: 10;
  background: white;
}

::ng-deep .mat-header-cell {
  position: sticky;
  top: 0;
  z-index: 11;
  background: white;
  font-weight: 600;
  border-bottom: 1px solid #e0e0e0;
}
