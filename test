<div
  class="object-soliciting"
  [ngClass]="{ 'font-weight-medium': !readCustomer(row) }"
  [tooltip]="getDomainTooltip(row)"
  tooltipClass="tooltip-multiline"
  triggers="hover"
  show-delay="150"
  hide-delay="100">
  {{ row?.object?.label }}
</div>

getDomainTooltip(row: any): string {
  if (!row) return '';
  const lines: string[] = [];

  const domain = row.domain?.label?.toString().trim();
  const sub    = row.subDomain?.label?.toString().trim();

  if (domain) lines.push(domain);
  if (sub)    lines.push(sub);

  return lines.join('\n'); // chaque valeur sur sa propre ligne
}

/* ng2-tooltip-directive */
.tooltip-multiline .tooltip-inner {
  white-space: pre-line;
}
