this.router.navigate(['/ticket-list'], {
  queryParams: { filter: 'IN_PROGRESS' }
});

constructor(private route: ActivatedRoute) {}

ngOnInit(): void {
  const filterFromUrl = this.route.snapshot.queryParamMap.get('filter');
  if (filterFromUrl) {
    this.selectedFilter = filterFromUrl;
    this.applyFilter(filterFromUrl); // Appelle ta méthode de filtrage ici
  }
}

onFilterChanged(filterValue: string): void {
  this.selectedFilter = filterValue;
  this.router.navigate([], {
    queryParams: { filter: filterValue },
    queryParamsHandling: 'merge', // pour garder les autres paramètres
  });
}
