  align-items: flex-start;
  gap: 6px;

  .top {
    margin-left: 60px;
  }

  .badge-group {
    display: flex;
    justify-content: center;
    flex-direction: row;
  }

  .badge {
    margin-left: 5px;
  }

  .label {
    width: 145px;
  }
}

