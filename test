private static Predicate<Ticket> toJavaPredicate(com.hazelcast.query.Predicate<Object, Ticket> hzPredicate) {
    return ticket -> hzPredicate.apply(ticket);
}

private boolean isLateTreatmentDs(Ticket ticket, String userId, String edsId) {
    if (ticket == null || ticket.getStatus() == null || ticket.getCustomer() == null || ticket.getDs() == null || ticket.getClaimType() == null) {
        return false;
    }

    Predicate<Ticket> predicate = toJavaPredicate(
        TicketCriteria.treatmentIsLateDs(
            userId,
            edsId,
            List.of(), // ou récupérez les EDS enfants si nécessaire
            ticket.isPrivate() // booléen
        )
    );

    return predicate.test(ticket);
}
